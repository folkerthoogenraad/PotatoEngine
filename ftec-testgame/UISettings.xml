<LinearLayout
  width="match_parent"
  height="match_parent"
  orientation="vertical">

  <LinearLayout
    width="match_parent"
    height="wrap_content"
    orientation="horizontal">
    
    <TextField 
      width="match_parent"
      height="wrap_content"
      weight="2"
      hint="Input Text"
      />
  
    <Button
      width="match_parent"
      height="wrap_content"
      weight="1"
      text="Test!"/>
    
  </LinearLayout>
  
  <LinearLayout
    width="match_parent"
    height="wrap_content"
    orientation="horizontal">

    <Checkbox
      width="wrap_content"
      height="wrap_content"
      checked="true"
      text="Whynot"/>
    <Label
      width="wrap_content"
      height="wrap_content"
      text="Test!" />
    <Slider
      width="wrap_content"
      height="wrap_content"
      steps="10"/>
    <Button
      width="match_parent"
      height="match_parent"
      text="OI press meh!" />
    
  </LinearLayout>
  
</LinearLayout>
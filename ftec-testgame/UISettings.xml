<LinearLayout
  width="match_parent"
  height="match_parent"
  orientation="vertical">

  <LinearLayout
    width="match_parent"
    height="wrap_content"
    orientation="horizontal">

    <LinearLayout
      width="match_parent"
      height="wrap_content"
      orientation="vertical"
      weight="2">

      <TextField
        width="match_parent"
        height="wrap_content"
        hint="User name"
      />
      
      <TextField
        width="match_parent"
        height="wrap_content"
        hint="Password"
      />
      
      <TextField
        width="match_parent"
        height="wrap_content"
        hint="Email"
      />
      
    </LinearLayout>

    <Button
      width="match_parent"
      height="wrap_content"
      weight="1"
      text="Pizza is great" />
    
  </LinearLayout>
  
  <LinearLayout
    width="match_parent"
    height="wrap_content"
    orientation="horizontal">

    <LinearLayout
      width="match_parent"
      height="wrap_content"
      orientation="vertical">
      <Checkbox
        width="wrap_content"
        height="wrap_content"
        checked="true"
        text="Whynot"/>
      <Checkbox
        width="wrap_content"
        height="wrap_content"
        checked="true"
        text="Whynot"/>
      <Checkbox
        width="wrap_content"
        height="wrap_content"
        checked="true"
        text="Whynot"/>
      <Checkbox
        width="wrap_content"
        height="wrap_content"
        checked="true"
        text="Whynot"/>
    </LinearLayout>
    <Label
      width="wrap_content"
      height="wrap_content"
      text="Test!" />
    <Slider
      width="wrap_content"
      height="wrap_content"
      steps="10"/>
    <Button
      width="match_parent"
      height="wrap_content"
      weight="1"
      text="Jouw Moeder" />
    <Button
      width="match_parent"
      height="wrap_content"
      weight="1"
      text="HJarr ypotter" />
    
  </LinearLayout>

  <LinearLayout
    width="match_parent"
    height="wrap_content"
    orientation="horizontal">

    <Label
      width="match_parent"
      height="wrap_content"
      weight="1"
      text="Some knobs " />
    
    <Knob
      width="match_parent"
      height="wrap_content"
      weight="1"
      steps="-1"/>
    
    <Knob
      width="match_parent"
      height="wrap_content"
      weight="1"
      steps="12"/>
    
    <Knob
      width="match_parent"
